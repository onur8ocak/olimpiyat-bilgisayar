// sayilari tutmak icin bir dizi olusturdum
// her terimi ondan onceki terimin 3ile carpımını for ile olusturdum
// butun terimleri ekrana yazdırdım
#include <stdio.h>
int main() {
   int dizi[5];
   int sayi,i=1;
   printf("sayi giriniz:");
   scanf("%d",&sayi);
   dizi[0]=sayi;
   printf("dizi[0]=%d",sayi);
   for(i;i<5;i++){
   dizi[i]=3*dizi[i-1];
   printf("\ndizi[%d]=%d",i,dizi[i]);
   }
    return 0;
}
